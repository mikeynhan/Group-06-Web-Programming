<!DOCTYPE html>
<html lang="en">
    <!-- Head section here -->
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="/css/vendor.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!-- Head section here -->
<body>
    <!-- Navigation bar section here -->
    <%- include('./partials/others-nav.ejs') %>
    <!--Breadcrumb section-->
    <%- include('./partials/customer/customer-breadcrumb.ejs') %>
    <!-- Main section here -->
    <main>
        <!--Edit Product Body-->
        <div id="edit-prd">
            <h1>Edit Product</h1>
            <form method="post" action="/vendor/edit/<%= product._id %>" enctype="multipart/form-data">
                <label for="fname">Product name:</label>
                <input type="text" id="fname" name="name" value="<%= product.name %>" required>
                <label for="stock">In Stock:</label>
                <input type="number" id="stock" name="stockQuantity" value="<%= product.stockQuantity %>" min="0">
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" value="<%= product.price %>" required>
                <label for="description">Description:</label>
                <input type="text" id="description" name="description" value="<%= product.description %>">
                <label for="product-image">Product Image:</label>
                <input type="file" id="product-image" name="productImage">
                <input type="submit" value="Update">
            </form>
        </div>
    </main> 
        <!-- Footer section here -->
        <%- include('./partials/footer.ejs') %>
        <!-- Footer section here -->

        <!--Js link-->
<script type="text/javascript" src="/js/customer-script.js"></script>
</body>
</html>
